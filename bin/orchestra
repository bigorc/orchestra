#!/bin/bash

BIN="${BASH_SOURCE-$0}"
BIN="$(dirname "${BIN}")"
BINDIR="$(cd "${BIN}"; pwd)"
echo $BINDIR

JAVA_HOME=/usr/lib/jvm/java-7-openjdk-amd64/

if [ $BINDIR != "/usr/bin" ]; then
	CLASSPATH=target/classes:conf/
	LIBDIR=lib/
else
	CLASSPATH=/usr/share/orchestra/orchestra.jar/:/etc/orchestra/
	LIBDIR=/usr/share/orchestra/lib/
fi

echo $CLASSPATH

for i in $LIBDIR/*.jar
do
	CLASSPATH="$i:$CLASSPATH"
done

java -cp $CLASSPATH org.oc.orchestra.client.Client "$@"
