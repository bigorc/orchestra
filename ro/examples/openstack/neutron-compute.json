{
	"type": "container",
	"resources":
		[
		 {
			 "type": "option",
			 "file": "/etc/sysctl.conf",
			 "contain_properties":
				 [
				  {
					  "name": "net.ipv4.conf.all.rp_filter",
					  "value": 0
				  },
				  {
					  "name": "net.ipv4.conf.default.rp_filter",
					  "value": 0
				  },
				  {
					  "name": "net.bridge.bridge-nf-call-arptables",
					  "value": 1
				  },
				  {
					  "name": "net.bridge.bridge-nf-call-iptables",
					  "value": 1
				  },
				  {
					  "name": "net.bridge.bridge-nf-call-ip6tables",
					  "value": 1
				  }
				 ]
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "sysctl -p"
		 },
		 {
			 "stateMachine": "package",
			 "sm_args": "neutron-common neutron-plugin-ml2 neutron-plugin-openvswitch-agent openvswitch-datapath-dkms",
			 "sm_state": "installed"
		 },
		 {
			 "type": "ini",
			 "file": "/etc/neutron/neutron.conf",
			 "contain_properties":
				 [
				  {
					  "section": "DEFAULT",
					  "name": "auth_strategy",
					  "value": "keystone"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "auth_uri",
					  "value": "http://controller:5000"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "auth_host",
					  "value": "controller"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "auth_protocol",
					  "value": "http"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "auth_port",
					  "value": "35357"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "admin_tenant_name",
					  "value": "service"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "admin_user",
					  "value": "neutron"
				  },
				  {
					  "section": "keystone_authtoken",
					  "name": "admin_password",
					  "value": "password"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "rpc_backend",
					  "value": "neutron.openstack.common.rpc.impl_kombu"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "rabbit_host",
					  "value": "controller"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "rabbit_password",
					  "value": "password"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "core_plugin",
					  "value": "ml2"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "service_plugins",
					  "value": "router"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "allow_overlapping_ips",
					  "value": "True"
				  }
				 ]
		 }	,
		 {
			 "type": "ini",
			 "file": "/etc/neutron/plugins/ml2/ml2_conf.ini",
			 "contain_properties": 
				 [
				  {
					  "section": "ml2",
					  "name": "type_drivers",
					  "value": "gre"
				  },
				  {
					  "section": "ml2",
					  "name": "tenant_network_types",
					  "value": "gre"
				  },
				  {
					  "section": "ml2",
					  "name": "mechanism_drivers",
					  "value": "openvswitch"
				  },
				  {
					  "section": "ml2_type_gre",
					  "name": "tunnel_id_ranges",
					  "value": "1:1000"
				  },
				  {
					  "section": "securitygroup",
					  "name": "firewall_driver",
					  "value": "neutron.agent.linux.iptables_firewall.OVSHybridIptablesFirewallDriver"
				  },
				  {
					  "section": "securitygroup",
					  "name": "enable_security_group",
					  "value": "True"
				  },
				  {
					  "section": "ovs",
					  "name": "local_ip",
					  "value": "192.168.131.172"
				  },
				  {
					  "section": "ovs",
					  "name": "tunnel_type",
					  "value": "gre"
				  },
				  {
					  "section": "ovs",
					  "name": "enable_tunneling",
					  "value": "True"
				  }
				 ]
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "service openvswitch-switch restart"
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "ovs-vsctl add-br br-int"
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "service neutron-plugin-openvswitch-agent restart"
		 },
		 {
			 "type": "ini",
			 "file": "/etc/nova/nova.conf",
			 "contain_properties": 
				 [
				  {
					  "section": "DEFAULT",
					  "name": "network_api_class",
					  "value": "nova.network.neutronv2.api.API"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_url",
					  "value": "http://controller:9696"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_auth_strategy",
					  "value": "keystone"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_admin_tenant_name",
					  "value": "service"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_admin_username",
					  "value": "neutron"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_admin_password",
					  "value": "password"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "neutron_admin_auth_url",
					  "value": "http://controller:35357/v2.0"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "linuxnet_interface_driver",
					  "value": "nova.network.linux_net.LinuxOVSInterfaceDriver"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "firewall_driver",
					  "value": "nova.virt.firewall.NoopFirewallDriver"
				  },
				  {
					  "section": "DEFAULT",
					  "name": "security_group_api",
					  "value": "neutron"
				  }
				 ]
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "service nova-compute restart",
		 },
		 {
			 "stateMachine": "cmd",
			 "sm_args": "service neutron-plugin-openvswitch-agent restart",
		 }
		]
}